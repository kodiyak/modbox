    "lint": "biome lint"
  },
  "dependencies": {
    "@modpack/utils": "workspace:*",
    "react-refresh": "0.17.0"
  },
  "devDependencies": {
    "@modpack/typescript-config": "workspace:*",
    "@types/react-refresh": "^0.14.6"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  }
