{
  "name": "modpack",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "build:npm": "pnpm turbo build --filter @modpack/core --filter @modpack/plugins --filter @modpack/utils",
    "publish": "pnpm turbo publish --filter @modpack/core --filter @modpack/plugins --filter @modpack/utils",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "dependencies": {
    "next": "^15.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tsup": "8.5.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.5",
    "@biomejs/biome": "2.0.6",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "eslint": "^9.29.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}